<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_main_login"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/theme_content_bg"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:background="@color/title_bg"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/btn_back"
                android:padding="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:src="@drawable/icon_back"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:contentDescription="@null"/>
        <TextView
                android:textSize="20.0sp"
                android:textColor="@color/white"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:orientation="vertical"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingBottom="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
                android:textSize="18.0sp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_hint"
                android:id="@+id/et_login_name"
                android:background="@drawable/shape_white"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginTop="21.0dip"
                android:hint="@string/user_tip"
                android:singleLine="true"
                android:drawableLeft="@drawable/selector_mobile"
                android:drawablePadding="8.0dip"
                android:inputType="text"/>

        <EditText
                android:textSize="18.0sp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_hint"
                android:id="@+id/et_login_pwd"
                android:background="@drawable/shape_white"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginTop="21.0dip"
                android:hint="@string/pwd_tip"
                android:singleLine="true"
                android:drawableLeft="@drawable/selector_pwd"
                android:drawablePadding="8.0dip"
                android:layout_below="@id/et_login_name"
                android:inputType="textPassword"
                android:maxLength="12"
                />

        <Button
                android:textSize="18.0sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/bt_login"
                android:background="@drawable/selector_shape_orange"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_marginTop="32.0dip"
                android:text="@string/login"
                android:onClick="startLogin"
                android:layout_below="@id/et_login_pwd"/>
        <Button
                android:textSize="16.0sp"
                android:textColor="@color/text_green_three"
                android:gravity="right"
                android:id="@+id/bt_register"
                android:background="@null"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/fast_regist"
                android:layout_below="@id/bt_login"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>