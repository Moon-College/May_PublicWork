<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tz.aysnctaskdownload.MainActivity" >

    <Button
        android:id="@+id/download_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="downloadPicture"
        android:text="下载图片" />

    <Button
        android:id="@+id/download_apk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="downloadApk"
        android:text="下载安装apk" />

    <ImageView
        android:id="@+id/show_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</LinearLayout>