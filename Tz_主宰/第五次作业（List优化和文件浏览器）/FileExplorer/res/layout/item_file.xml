<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/normal_margin" >

    <ImageView
        android:id="@+id/item_file_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_file_arrow"
        android:layout_toRightOf="@+id/item_file_icon"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/item_file_attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_file_name"
        android:layout_toLeftOf="@+id/item_file_arrow"
        android:layout_toRightOf="@+id/item_file_icon"
        android:gravity="left"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/item_file_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/icon_link" />

</RelativeLayout>