    android:layout_height="match_parent"
    android:background="#ff00ff"
    android:id="@+id/ll"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#ff0000" 
