<?xml version="1.0" encoding="utf-8"?>
<com.tz.michael.custom.ProportionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:proportion="http://schemas.android.com/apk/res/com.tz.michael.activity"
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        proportion:px="0.3"
        proportion:py="0.6"
        android:background="#0f0"
        android:text="@string/hello" />

    <ImageView 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        proportion:px="0.1"
        proportion:py="0.3"
        />
    
</com.tz.michael.custom.ProportionLayout>