<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00" >

    <com.itskylin.android.customvolume.view.CustomeVolume
        android:id="@+id/customeVolume"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="#333"
        android:padding="10dp" />

    <com.itskylin.android.customvolume.view.CustomeVolume
        android:id="@+id/customeVolume2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/customeVolume"
        android:layout_marginBottom="10dp"
        android:background="#333"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <com.itskylin.android.customvolume.view.CustomeVolume
        android:id="@+id/customeVolume3"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_below="@id/customeVolume2"
        android:background="#333"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

</RelativeLayout>